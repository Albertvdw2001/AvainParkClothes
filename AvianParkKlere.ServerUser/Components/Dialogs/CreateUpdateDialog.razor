@using MudBlazor
@using System.Reflection;

@inject ISnackbar snackbar

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider Style="
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translate(-50%, -50%);
            -webkit-transform: translate(-50%, -50%);" />

<MudDialog @ref="Dialog" Style="width: 25%;">

    <TitleContent>
        <MudText Typo="Typo.h6">@TitleText</MudText>
    </TitleContent>

    <DialogContent>
        @if (AddSecondTab == true)
        {
            <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="@TabOneText">
                </MudTabPanel>
                @if (FormTemplate is not null)
                {
                    @FormTemplate
                }
                <MudTabPanel Text="@TabTwoText">
                    @if (FormTemplate is not null)
                    {
                        @FormTemplate2
                    }
                </MudTabPanel>
            </MudTabs>
        }
        else
        {
            @if (FormTemplate is not null)
            {
                @FormTemplate
            }
        }



    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Cancel</MudButton>
        <MudButton Color="Color.Primary" Disabled="!SubmitButtonEnabled" OnClick="OnSubmit">@SubmitText</MudButton>
    </DialogActions>
</MudDialog>